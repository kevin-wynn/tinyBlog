extends ../layouts/admin-default

include ../mixins/forms

include partials/header

block content
  .container.users
    .row
      h1 Users
    .row
      .toolbar
        +buttonLink('button', 'createUser', 'user/createUser', 'Create New User')
    .row
      table.tb-table.users-table
        tbody
          tr
            th Active
            th Name
            th Username
            th Email
            th Date of Birth
            th
            th
          for user in users
            tr(id=user._id).user-row
              td #{user.active}
              td #{user.name}
              td #{user.username}
              td #{user.email}
              td #{moment(user.dob).format("MM-DD-YYYY")}
              td 
                a(href="/admin/user/getById/"+user._id) Edit
              td
                a(href="/admin/user/deleteUser/"+user._id) Delete

include partials/footer
